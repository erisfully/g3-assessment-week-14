<h1>Add a medication to <%= @patient.first_name %> <%= @patient.last_name %></h1>



<%= form_for @medication, url: patient_medications_path(@patient) do |f|%>
  <% if @medication.errors.any? %>
    <span class="error"><%= flash[:notice] %></span>
    <% @medication.errors.full_messages.each do |error| %>
    <ul>
      <li class="error"><%= error %></li>
    </ul>
    <% end %>
<% end %>
  <div><%= f.label :name %>
  <%= f.select(:name, @medications.map{|medication| [medication.name]}) %>
  </div>
  <div>
    <%= f.label :dosage %>
    <%= f.text_field :dosage  %>
  </div>
  <div>
    <%= f.label :schedule %>
    <%= f.text_field :schedule  %>
  </div>
  <div>
    <%= select_date Date.today, prefix: :start_date %>
  </div>
  <div>
    <%= select_date Date.today, prefix: :end_date %>
  </div>
  <%= f.hidden_field :patient_id, value: @patient.id %>

  <%= f.submit 'Create Prescription' %>
<% end %>